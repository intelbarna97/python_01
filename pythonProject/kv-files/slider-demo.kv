<MainWindow>:
    Slider:
        id:v_slider
        orientation:"vertical"
        size_hint:0.2,0.5
        pos_hint:{"center_x":0.2,"center_y":0.5}
        step:1
        min:10
        max:100
        value:50

    Slider:
        id:h_slider
        orientation:"horizontal"
        size_hint:0.3,0.6
        pos_hint:{"center_x":0.5,"center_y":0.4}
        step:1.5
        min:-50
        max:200
        value:-10

    Label:
        text:str(v_slider.value)
        size_hint:0.1,0.1
        pos_hint:{"center_x":0.3,"center_y":0.5}
        font_size:60
        color:0.3,0.2,0.9

    Label:
        text:str(h_slider.value)
        size_hint:0.1,0.1
        pos_hint:{"center_x":0.6,"center_y":0.6}
        font_size:60
        color:0.3,0.2,0.9